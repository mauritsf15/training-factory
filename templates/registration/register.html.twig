{% extends 'base.html.twig' %}

{% block title %}Registreren{% endblock %}

{% block body %}
<div class="container mx-auto h-100 flex-1 flex items-center justify-center py-5 gap-10">
    <div class="border-2 p-8 pt-10 pb-20 flex items-center flex-col">
        <h1 class="text-4xl font-semibold mb-7">Register</h1>

        {{ form_start(registrationForm) }}
        <div class="flex flex-col gap-5">
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
        </div>

        <button type="submit" class="btn bg-gray-600 text-white w-full py-2 mt-10" style="
        box-shadow: 0px 3px 3px rgba(0,0,0,0.2);">Register</button>
        {{ form_end(registrationForm) }}
        <p class="mt-4">Al een account? <a href="{{ path('app_login') }}" class="underline text-blue-500">Inloggen</a></p>
    </div>
</div>
{% endblock %}
