{% extends 'base.html.twig' %}

{% block title %}Edit class{% endblock %}

{% block body %}
    <div class="container mx-auto py-5 px-0 md:px-44">

        <div class="container mx-auto h-100 flex-1 flex items-center justify-center py-5 gap-10">
            <div class="border-2 p-8 pt-10 pb-20 flex items-center flex-col">
                <h1 class="text-4xl font-semibold mb-3">Bewerk datum {{ class.Trainings.name }}</h1>
                <h3 class="text-1xl font-semibold mb-7 w-full ">Op: {{ class.date }}</h3>
                {{ form_start(form) }}
                <div class="flex flex-col gap-5">

                    <a class="w-full border-t border-gray-100 text-gray-600 py-4 pl-6 pr-3 w-full block hover:bg-gray-100 transition duration-150">
                        <img src="https://static.thenounproject.com/png/4595392-200.png" alt="" class="rounded-full h-6 shadow-md inline-block mr-2">
                        {{ form_row(form.date) }}
                    </a>
                </div>

                <button type="submit" class="btn bg-green-600 text-white w-full py-2 mt-10" style="
        box-shadow: 0px 3px 3px rgba(0,0,0,0.2);">Toevoegen</button>
                {{ form_end(form) }}
            </div>
        </div>

    </div>
{% endblock %}
